{
    "name": "verband/application",
    "description": "A template to build Verband applications",
    "autoload": {
        "psr-0": {
            "": "Packages/"
        }
    },
    "require": {
        "php": ">=5.3.3",
	"Verband/Installer": "dev-master",
	"Verband/Framework": "dev-master",
	"Verband/Package": "dev-master",
        "Verband/Doctrine": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [],
        "post-update-cmd": []
    },
    "config": {
        "bin-dir": "Application\bin",
        "vendor-dir": "Packages"
    },
    "extra": {
        "verband-app-dir": "Application",
        "verband-web-dir": "Public"
    }
}
